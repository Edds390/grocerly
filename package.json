{
  "name": "grocery-deals-finder",
  "version": "1.0.0",
  "description": "Chrome extension to find grocery deals",
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "build-prod": "tsc && tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "watch": "tsc --watch",
    "dev": "npm-run-all --parallel watch css:watch",
    "css:watch": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "css:build": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "chrome": "./dev-chrome.sh",
    "reload": "./reload-extension.sh",
    "setup": "./build.sh && echo '\nðŸš€ Now run: yarn chrome'",
    "r": "./reload-extension.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  }
}
